#wt_socialproof
	margin 64px 32px
	display flex
	flex-direction column
	align-items center

	h2
		text--header($black)
		margin-bottom 1.5rem
		padding-bottom 12px
		border-bottom 2px solid $border-color
		text-align center
		width 100%

	p
		text--body($black)
		margin 32px 0

	section
		display inline-block
		margin-bottom 32px

		&:last-child
			margin-bottom 0

		ul
			display inline-block

			li
				float left
				margin-right 32px
				&:last-child
					margin-right 0

				a
					display inline-block
					float left

					img
						float left
						width 200px


@media all and (max-width:$mobile)
	#wt_socialproof
		margin 32px
		padding 0 16px

		h2
			margin-bottom 1rem

		p
			margin 16px 0

		section
			margin-bottom 16px

			h2
				font-size 2rem // mobile

			ul
				li
					width 50%
					margin 0 0 16px 0

					a
						img
							width 100%