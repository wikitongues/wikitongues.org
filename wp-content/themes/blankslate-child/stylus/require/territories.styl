.related-territories
	width 100%
	padding 0 6rem
	&.metadata
		.territories-list
			display flex
			flex-wrap wrap
			flex-direction row
			justify-content left

			.territory
				width 20%
				padding 8px
				box-sizing border-box

				a.territory-name
					text--strong($blue())
					padding 8px
					display inline-block

				.custom-gallery
					.gallery-container
						margin-bottom 0