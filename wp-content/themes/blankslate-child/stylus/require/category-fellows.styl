.fellow-gallery-nav
	display flex
	flex-direction row
	justify-content space-between
	align-items baseline
	border-bottom 2px solid $border-color
	margin 0 32px

	&:last-of-type
		border-bottom 2px solid $border-color

	strong
		text--strong($black)
		float left
		a
			text--strong($blue())

	select
		float left
		appearance none
		background transparent
		border none
		border-radius 4px
		padding 16px
		text--strong($blue())
		font-size 1.6rem

		&:hover
			background $blue(10)
			cursor pointer

	ul
		display flex
		flex-direction row
		margin-left 8px
		padding-left 8px

		li
			a
				display inline-block
				padding 16px
				white-space nowrap
				text--body($blue())
				border-radius 4px

				&:hover
					background $blue(10)
					cursor pointer

			&.active
				a
					font-weight bold