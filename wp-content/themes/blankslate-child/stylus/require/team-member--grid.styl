.wrapper#volunteers
	display grid
	grid-template-columns repeat(3, 1fr)
	grid-column-gap 1.6rem

.wt_team-member--grid
	display inline-block
	margin 0
	width 100%
	vertical-align top

	&:first-of-type
		margin-left 0

	&__img
		display block
		width 100%
		height 300px
		background-position center center
		background-size cover
		background-repeat no-repeat
		border-radius 16px 0 16px 0

	&__meta
		display block
		width 100%
		margin-top 1.5rem

		strong
			text--strong($black)

			span
				&:first-of-type
					text-transform uppercase

		p
			text--body($black)

		ul
			margin 1.5rem 0

			li
				display inline-block
				margin-right 1.5rem
				text--body($black)

				&:last-of-type
					margin-right 0

				a
					text--body($blue())
					text-decoration none

@media all and (max-width:$mobile)
	.page-template-template-about-staff,
	.page-template-template-about-board
		.wrapper
			> h4
				margin-left 2.4rem

	.wrapper
		&#volunteers
			display flex

		i
			font-size 3.2rem

	.wt_team-member--grid
		width 100%

		&__img
			height 200px
			margin 0 auto 3rem
			width 90%
		&__meta
			padding-left 2.4rem