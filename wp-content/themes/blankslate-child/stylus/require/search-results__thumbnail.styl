.wt_search-results
	&__thumbnail
		display flex
		flex-direction row
		align-items center
		margin-bottom 3rem

		&--image
			min-width 300px
			width 300px
			height 170px
			background-size cover
			background-position center center
			background-repeat no-repeat

		&--no-image
			min-width 300px
			width 300px
			height 170px
			background $blue()

		&--copy
			display inline-block
			padding-left 3rem

			p
				margin-bottom 1.5rem

				strong
					text--strong($black)

				span
					text--body($black)

			a
				button--secondary($blue(), $parchment)

				i
					margin-left 0.5rem