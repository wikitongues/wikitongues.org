.blog-archive,
.blog-post
	text--body($black)

.blog-archive
	max-width $content
	width 100%
	margin 0 auto

	h1
		text--header($black)
		margin-bottom 2.4rem

	h5
		text--body($grey-50)
		margin-bottom 2.4rem

	.blog-posts
		a
			display flex
			justify-content flex-end
			flex-direction column
			height 450px
			border-radius 8px 0 8px 0
			background-position center
			background-size cover
			margin-bottom 1.6rem
			color $parchment
			padding 3.2rem

			*
				margin-bottom 1.6rem
				max-width 600px

				&:last-child
					margin-bottom 0

			h2
				text--header(inherit)
				line-height normal

			.excerpt
				p
					font-size 1.6rem

@media all and (max-width:$mobile)
	.blog-archive
		width 100%
		padding 0 1.6rem

		h1
			font-size $fontScale(7)

		h5
			font-size $fontScale(4)

		.blog-posts
			a
				height auto
				padding 2.4rem
				border-radius 8px

				h2
					font-size $fontScale(6)
					text--body(inherit)
					margin-bottom 1.6rem

				.excerpt
					p
						font-size $fontScale(4)
						display: -webkit-box;
						-webkit-line-clamp: 2;
						-webkit-box-orient: vertical;
						overflow: hidden;
						text-overflow: ellipsis;

.blog-post
	.breadcrumbs,
	.entry-header,
	.entry-content
		width ($content / 1.5)
		margin 0 auto

	.breadcrumbs
		a
			color $blue()
			margin-bottom 2.4rem
			display block

	header
		*
			margin-bottom 2.4rem
			color $grey-50

		h1
			text--header($black)

		.excerpt
			p
				font-size $fontScale(4) // 2

	.entry-content
		*
			margin-bottom 1.6rem

		em
			font-style italic

		.wp-caption
			max-width 110%
			margin 0 auto 1.6rem

		.wp-caption img,
		img
			width 100%
			height auto
			margin-top 2.4rem
			border-radius 1.6rem

		.wp-caption img
			margin-left -5%

		.wp-caption-text
			color $grey-50
			text-align center
			max-width 960px
			margin 0 -5%
			width 100%
			margin-left -5%

		a
			anchor($blue(), 4px)
			text-decoration underline

		p
			iframe
				width 100%
				height auto
				aspect-ratio 16 / 9
				margin-bottom 0

	.related-posts
		width $content * 1.5
		margin 6.4rem auto
		border-radius 8px

		h4
			margin-bottom 1.6rem

		.related-posts-grid
			display grid
			gap 1.6rem
			grid-template-columns repeat(auto-fit, minmax(200px, 2fr))

			.related-post
				a
					background $black
					padding 1.6rem
					border-radius 8px
					color $parchment
					display flex
					justify-content flex-end
					flex-direction column
					background-position center
					background-size cover
					aspect-ratio 16 / 9

					*
						margin-bottom 1.6rem

					p.related-title
						font-size $fontScale(5)

					.meta
						margin-bottom 0

					.thumbnail
						display flex
						height 200px
						border-radius 8px 0 8px 0
						background-position center
						background-size cover

@media all and (max-width:$mobile)
	.blog-post
		.breadcrumbs,
		.entry-header,
		.entry-content
			width 100%
			padding 0 1.6rem

		header
			h1
				font-size $fontScale(7)

			.excerpt
				p
					font-size $fontScale(4)

		.entry-content
			.wp-caption img,
			img
				border-radius 0

			.wp-caption-text
				padding 0 1.6rem

		.related-posts
			width 100%
			padding 0 1.6rem

			h4
				font-size $fontScale(5)

			.related-posts-grid
				grid-template-columns repeat(auto-fit, minmax(200px, 1fr))