.wt_meta--videos-single
	width calc(100%/4)
	float left

	section
		margin-bottom 1.6rem

		ul
			margin-top 0

			li
				margin-bottom 0

	strong
		text--strong($black)
		display block

		&.wt_sectionHeader

			a
				text--strong($blue())

	p, a
		text--body($black)
		margin-bottom 4px

	ul
		margin-top .8rem

		&.wt_meta__featured-languages
			margin-top 3rem
			>li
				&:not(:last-of-type)
					margin 0 0 16px
					padding-bottom 16px

				ul
					padding-left 8px
					border-left 1px solid $border-color
					li:not(:last-of-type)
						margin-bottom 1.2rem

			li
				.wt_text--label
					text--strong($black)
					a
						text--strong($blue())

	a
		text-decoration none
		anchor($blue(),2px)

		span
			text--body($blue())

@media all and (max-width:$mobile)
	.wt_meta
		&--videos-single
			float none
			width 100%

		&__featured-languages
			li
				&:last-of-type
					margin-bottom 0

				ul
					li
						display inline-block
						vertical-align top
						width 49%
