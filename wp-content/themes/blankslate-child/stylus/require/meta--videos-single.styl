.wt_meta--videos-single
	width calc(100%/4)
	float left

	section
		margin-bottom 1.6rem

		ul
			margin-top 0

			li
				margin-bottom 0

	strong
		text--strong($black)
		margin-bottom 4px
		display block

		&.wt_sectionHeader
			margin-bottom 1.6rem
			padding-bottom 12px

	p, a
		text--body($black)
		margin-bottom 1.6rem

	ul
		margin-top 1.5rem

		&.wt_meta__featured-languages
			margin-top 3rem

		li
			margin-bottom 1.6rem

	a
		text-decoration none
		anchor($blue(),2px)

		span
			text--body($blue())

@media all and (max-width:$mobile)
	.wt_meta
		&--videos-single
			float none
			width 100%

		&__featured-languages
			li
				&:last-of-type
					margin-bottom 0

				ul
					li
						display inline-block
						vertical-align top
						width 49%
